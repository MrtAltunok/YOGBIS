                        extend: 'pdf',
                        className: 'btn btn-danger btn-sm mt-1 mb-2 ml-1 rounded w-25 h-25',
                        download: 'open'
                    },
                    {
                        text: 'Pdf-y',
                        extend: 'pdfHtml5',
                        orientation: 'landscape',
                        pageSize: 'LEGAL',
                        className: 'btn btn-danger btn-sm mt-1 mb-2 ml-1 rounded w-50 h-25',
                        download: 'open'
                    },
                    {
                        text: 'Yazdır',
