@model YOGBIS.Common.VModels.SoruKategorilerVM
@{
    ViewData["Title"] = "Soru Kategorisi Ekleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card shadow-lg rounded-lg mt-2">
    <div class="card-header">
        <i class="fas fa-pen mr-1"></i>
        <b>Soru Kategorisi Ekleme/Güncelleme</b>
    </div>
    <div class="card-body">
        <form class="form-group m-0" asp-action="SoruKategoriEkle">
            @Html.HiddenFor(x => x.SoruKategorilerId)
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="SoruKategorilerId" class="small mb-1 font-weight-bold">Kategori Numarası</label>
                        <input asp-for="SoruKategorilerId" type="number" class="form-control py-2" id="CreateTypeInput" placeholder="Kategori Numarası Giriniz" disabled>
                        <span class="text-danger" asp-validation-for="SoruKategorilerId"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="SoruKategorilerAdi" class="small mb-1 font-weight-bold">Kategori Adı</label>
                        <input asp-for="SoruKategorilerAdi" type="text" class="form-control py-2" id="CreateTypeInput" placeholder="Kategori Adını Giriniz">
                        <span class="text-danger" asp-validation-for="SoruKategorilerAdi"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="DereceId" class="small mb-1 font-weight-bold">Derece</label>
                        @Html.DropDownListFor(u => u.DereceId, new SelectList(ViewBag.Dereceler, "DereceId", "DereceAdi"), "Dereceyi seçiniz", new { @class = "form-control-range form-control py-2" })
                        @*<select asp-for="DereceAdi" class="form-control-range form-control py-2" aria-label="Default select example">
                                <option asp-for="Derecesi" selected class="text-center"></option>
                                <option asp-for="Derecesi" value="Öğretmen">Öğretmen</option>
                                <option asp-for="Derecesi" value="Okutman">Okutman</option>
                            </select>*@
                        <span class="text-danger" asp-validation-for="DereceId"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="SoruKategorilerKullanimi" class="small mb-1 font-weight-bold">Kategori Kullanımı</label>
                        <select asp-for="SoruKategorilerKullanimi" class="form-control-range form-control py-2" aria-label="Default select example">
                            <option asp-for="SoruKategorilerKullanimi" selected class="text-center"></option>
                            <option asp-for="SoruKategorilerKullanimi" value="Sınav">Sınav</option>
                            <option asp-for="SoruKategorilerKullanimi" value="Değerlendirme">Değerlendirme</option>
                        </select>
                        <span class="text-danger" asp-validation-for="SoruKategorilerKullanimi"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="SoruKategorilerPuan" class="small mb-1 font-weight-bold">Kategori Puan</label>
                        <input asp-for="SoruKategorilerPuan" type="number" max="30" min="0" class="form-control py-2" id="CreateTypeInput" placeholder="Kategori Puanını Giriniz">
                        <span class="text-danger" asp-validation-for="SoruKategorilerPuan"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <input type="submit" value="Değiştir" class="btn btn-success" />
                    <a asp-controller="SoruKategorileri" asp-action="Index" id="cancel" name="cancel" class="btn btn-danger">Vazgeç</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


