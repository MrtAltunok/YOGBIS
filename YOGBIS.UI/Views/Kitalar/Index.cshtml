@model YOGBIS.Common.VModels.KitalarVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-pen mr-1"></i>
                <b>Kıta Ekleme/Güncelleme</b>
            </div>
            <div class="card-body">
                <form class="form-group m-0" asp-action="Index">
                    @Html.HiddenFor(x => x.KitaId)
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="KitaAdi" class="small mb-1 font-weight-bold">Kıta Adı</label>
                                        <input asp-for="KitaAdi" type="text" class="form-control py-2" id="CreateTypeInput" placeholder="Kıta adını yazınız">
                                        <span class="text-danger" asp-validation-for="KitaAdi"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="KitaAciklama" class="small mb-1 font-weight-bold">Kıta Açıklama</label>
                                        <input asp-for="KitaAciklama" type="text" class="form-control py-2" id="CreateTypeInput" placeholder="Kıtaya ait bir açıklama yazınız">
                                        <span class="text-danger" asp-validation-for="KitaAciklama"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <input type="submit" value="Kaydet" class="btn btn-success btn-sm" />
                                    <a asp-controller="Kitalar" asp-action="Index" id="cancel" name="cancel" class="btn btn-danger btn-sm">Vazgeç</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @*<div class="col-md-6">
        @await Component.InvokeAsync("DereceListesi")
    </div>*@
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

