@model IEnumerable<YOGBIS.Common.VModels.OkulBilgiVM>
@{
    ViewData["Title"] = "OkulBilgileri";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}
<style>
    .block {
        position: fixed;
        z-index: 2;
        right: 15px;
        top: 95px;
    }
</style>
@*<h1 class="text-center text-info">YURTDIŞI OKUL YÖNETİCİ BİLGİLERİ</h1>*@
<ol class="breadcrumb mb-4 mt-2">
    <li class="ml-2 mr-2">
        @Html.DropDownList("UlkeListesi", new SelectList(ViewBag.UlkeAdi, "UlkeId", "UlkeAdi"), "Bulunduğu Ülkeyi Seç", new { @class = "form-control-range form-control py-1 w-100" })
    </li>
    <li class="ml-2 mr-2">
        <a asp-controller="OkulBilgi" asp-action="OkulBilgiYazdir" class="btn btn-secondary btn-circle pt-2" title="Yazdır">
            <i class="fas fa-print"></i>
        </a>
    </li>
    <li class="ml-2 mr-2">
        <a asp-controller="OkulBilgi" asp-action="OkulBilgiYazdir" class="btn btn-success btn-circle pt-2" title="Excel">
            <i class="fas fa-file-excel"></i>
        </a>
    </li>
    <li class="ml-2 mr-2">
        <a asp-controller="OkulBilgi" asp-action="OkulBilgiYazdir" class="btn btn-danger btn-circle pt-2" title="Pdf">
            <i class="fas fa-file-pdf"></i>
        </a>
    </li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        <b>Okul Yönetici Bilgileri</b>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="myTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Seç</th>
                        <th>Sıra No</th>
                        <th>Ülke</th>
                        <th>Okul Adı</th>
                        <th>Okul Telefon</th>
                        <th>Okul Adres</th>
                        <th>Müdür</th>
                        <th>Dönüş Yılı</th>
                        <th>Müdür Cep</th>
                        <th>Müdür E-Posta</th>
                        <th>Müdür Yardımcısı</th>
                        <th>Dönüş Yılı</th>
                        <th>Müdür Yrd. Cep</th>
                        <th>Müdür Yrd. E-Posta</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var sirano = 0;}
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            sirano++;
                            <tr>
                                <td style="vertical-align:middle"></td>
                                <td>@sirano</td>
                                <td>@item.UlkeAdi</td>
                                <td>@item.OkulAdi</td>
                                <td>@item.OkulTelefon</td>
                                <td>@item.OkulAdres</td>
                                <td class="text-capitalize">@item.MudurAdiSoyadi</td>
                                <td>@item.MudurDonusYil</td>
                                <td>@item.MudurTelefon</td>
                                <td>@item.MudurEPosta</td>
                                <td class="text-capitalize">@item.MdYrdAdiSoyadi</td>
                                <td>@item.MdYrdDonusYil</td>
                                <td>@item.MdYrdTelefon</td>
                                <td>@item.MdYrdEPosta</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>Kayıt bulunamadı!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">

        $(document).ready(function () {

            $("#myTable").on("click", ".btnSil", function () {
                var btn = $(this);
                bootbox.confirm("Silmek istediğinize emin misiniz?", function (result) {
                    if (result) {
                        var id = btn.data("id");
                        $.ajax({
                            type: "DELETE",
                            url: "/OkulBilgi/OkulBilgiSil/" + id,
                            success: function () {
                                btn.parent().parent().remove();
                                location.reload();
                            }
                        });
                    }
                });
            });

            $("#UlkeListesi").on("change", function () {

                var Id = $("#UlkeListesi").val();
                /*alert(Id);*/
