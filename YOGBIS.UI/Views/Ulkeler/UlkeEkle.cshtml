@model YOGBIS.Common.VModels.UlkelerVM
@{
    ViewData["Title"] = "UlkeEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-lg mt-0 h-100">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                <b>Ülke Ekleme/Güncelleme</b>
            </div>
            <div class="card-body">
                <form class="form-group m-0" asp-action="UlkeEkle">
                    @Html.HiddenFor(x=>x.UlkeId)
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="UlkeAdi" class="small mb-1 font-weight-bold">Ülke</label>
                                        <input asp-for="UlkeAdi" type="text" class="form-control py-2" id="CreateTypeInput" placeholder="Ülkeyi yazınız">
                                        <span class="text-danger" asp-validation-for="UlkeAdi"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="KitaAdi" class="small mb-1 font-weight-bold">Bulunduğu Kıta</label>
                                        @Html.DropDownListFor(u => u.KitaId, new SelectList(ViewBag.KitaAdi, "KitaId", "KitaAdi"), "Kıtayı seçiniz", new { @class = "form-control-range form-control py-2" })
                                        <span class="text-danger" asp-validation-for="KitaAdi"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="UlkeAciklama" class="small mb-1 font-weight-bold">Ülke Bilgisi</label>
                                        <textarea asp-for="UlkeAciklama" placeholder="Ülke bilgisi giriniz" class="form-control py-2 limiterBox" id="UlkeTextArea" rows="5" maxlength="250"></textarea>                                        
                                        <span class="text-danger" asp-validation-for="UlkeAciklama"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <input type="submit" value="Kaydet" class="btn btn-success btn-sm" />
                                    <a asp-controller="Ulkeler" asp-action="Index" id="cancel" name="cancel" class="btn btn-danger btn-sm">Vazgeç</a>
                                    <input type="file" value="Bayrak" class="form-control-file small mt-2" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">bayrak resmi</div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-lg rounded-lg mt-0 h-100">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                <b>Ülke Listesi</b>
            </div>
            <div class="card-body">

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/jquery.inputlimiter.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.date-picker').datepicker({
                autoclose: true,
                todayHighlight: true
            });

            $('.limiterBox').inputlimiter({
                remText: '%n karakter%s kaldı...',
                limitText:'max allowed:%n'
            });
        });
    </script>
}

