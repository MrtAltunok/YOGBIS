@model List<YOGBIS.Common.VModels.KullaniciYekiYonetimVM>
@{
    ViewData["Title"] = "Yonetim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Kullanıcı Yetkileri Yönetimi</h2>
             @ViewBag.UserName için Yetki Ekle/Sil
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>           
               }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Güncelle" class="btn btn-primary" style="width:auto" />
            <a asp-controller="KullaniciYetkileri" asp-action="Index" asp-route-id="@ViewBag.userId" class="btn btn-danger" style="width:auto">Vazgeç</a>
        </div>
    </div>
</form>

