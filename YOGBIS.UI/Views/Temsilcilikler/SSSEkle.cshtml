@model YOGBIS.Common.VModels.SSSVM
@{
    ViewData["Title"] = "SSSEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SSSEkle</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-pen mr-1"></i>
                <b>SSS Ekleme/Güncelleme</b>
            </div>
            <div class="card-body">
                <form class="form-group m-0" asp-action="SSSEkle">
                    @Html.HiddenFor(x => x.SSSId)
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Soru" class="small mb-1 font-weight-bold">Derece</label>
                                        <input asp-for="Soru" type="text" class="form-control py-2" id="CreateTypeInput" placeholder="Soruyu yazınız">
                                        <span class="text-danger" asp-validation-for="Soru"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <input type="submit" value="Kaydet" class="btn btn-success btn-sm" />
                                    <a asp-controller="Temsilcilikler" asp-action="Index" id="cancel" name="cancel" class="btn btn-danger btn-sm">Vazgeç</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}