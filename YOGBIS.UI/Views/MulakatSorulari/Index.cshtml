@section Scripts{
    <script type="text/javascript">
        $(function () {
            $("#myTable").on("click", ".btnSoruSil", function () {
                var btn = $(this);
                bootbox.confirm("Silmek istediğinize emin misiniz?", function (result) {
                    if (result) {

                        var id = btn.data("id");
                        
                        $.ajax({
                            type: "DELETE",
                            url: "MulakatSorulari/MulakatSoruSil/" + id,
                            success: function () {
                                btn.parent().parent().remove();
                            }
                        });
                    }
                })
            });
        });
    </script>
}