@model IEnumerable<YOGBIS.Common.VModels.MulakatSorulariVM>
@{
    ViewData["Title"] = "Mülakat Soruları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mt-4">Test Sayfası</h1>
<ol class="breadcrumb mb-4">
    <li>
        <a asp-controller="MulakatSorulari" asp-action="MulakatSoruEkle" class="btn btn-success btn-circle btn-sm" title="Yeni Kayıt">
            Yeni Kayıt <i class="fas fa-plus-circle"></i>
        </a>
    </li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Mülakat Soruları
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="myTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sıra No</th>
                        <th>Soru No</th>
                        <th>Derecesi</th>
                        <th>Kategori No</th>
                        <th>Kategori</th>
                        <th>Soru</th>
                        <th>Cevap</th>
                        <th class="text-center">Düzenle</th>
                        <th class="text-center">Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SoruSiraNo</td>
                            <td>@item.SoruNo</td>
                            <td>@item.Derecesi</td>
                            <td>@item.SoruKategoriId</td>
                            <td>@item.SoruKategoriAdi</td>
                            <td>@item.Soru</td>
                            <td>@item.Cevap</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-info" title="Düzenle" asp-controller="MulakatSorulari" asp-action="MulakatSoruGuncelle" asp-route-id="@item.MulakatSorulariId">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                @*<a class="btn btn-sm btn-danger" title="Sil" data-toggle="modal" data-target="#logoutModal" id="silinecekkayit" onclick="removeItem(@item.MulakatSorulariId)" data-id="@item.MulakatSorulariId">
            <i class="fas fa-trash text-white"></i>
        </a>*@
                                @*<a class="btn btn-sm btn-danger btnSoruSil" title="Sil" id="silinecekkayit" data-id="@item.MulakatSorulariId">
            <i class="fas fa-trash text-white"></i>
        </a>*@
                                <a class="btn btn-sm btn-danger" title="Sil" asp-action="MulakatSoruSil" asp-route-id="@item.MulakatSorulariId">
            <i class="fas fa-trash text-white"></i>
        </a>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
